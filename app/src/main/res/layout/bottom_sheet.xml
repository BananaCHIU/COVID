<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/btn_camera"
        style="@style/ActionItem"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/baseline_camera_alt_24"
        android:drawableLeft="@drawable/baseline_camera_alt_24"
        android:text="@string/camera"
        android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Subtitle2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_gallery"
        style="@style/ActionItem"
        android:drawableStart="@drawable/baseline_photo_library_24"
        android:drawableLeft="@drawable/baseline_photo_library_24"
        android:text="@string/gallery"
        android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Subtitle2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_camera" />

</androidx.constraintlayout.widget.ConstraintLayout>